<section id="main">
      <div class="container text-center">
        <div class="row align-items-center" id="startText">
            <div class="col-12 text-primary">
                
                <h3>Нові книги бібліотеки</h3>
             </div>
        </div>
    </div>
        
        <form action="post">
            <div class="col-md-8 offset-md-2 col-xl-6  offset-xl-3 col-lg-6 offset-lg-3">
              <div class="form-group align-items-center">
                <div class="slide">
                    <input type="radio" name="slider2" id="slider2_1" checked="checked">
                    <label for="slider2_1"></label>
                    <div>
                      <a href="/book/{{book_1._id}}"><img src="picture/book/{{book_1._id}}.jpg"></a>
                         <figcaption>{{book_1.title}}</figcaption>
                    </div>
                    <label for="slider2_2"></label>
                    <input type="radio" name="slider2" id="slider2_2">
                    <label for="slider2_2"></label>
                    <div>
                      <a href="/book/{{book_2._id}}"><img src="picture/book/{{book_2._id}}.jpg"></a>
                         <figcaption>{{book_2.title}}</figcaption>
                    </div>
                    <label for="slider2_3"></label>
                    <input type="radio" name="slider2" id="slider2_3">
                    <label for="slider2_3"></label>
                    <div>
                      <a href="/book/{{book_3._id}}"><img src="picture/book/{{book_3._id}}.jpg"></a>
                         <figcaption>{{book_3.title}}</figcaption>
                    </div>
                    <label for="slider2_4"></label>                   
                </div>	                
              </div>
            </div>
              <div class=" row justify-content-center  main-row-padding-leftrightt">                  
                    {{#each books}}
                      <div class="col-lg-3 col-md-6 col-sm-12 marginntop holder">
                        <a href="/book/{{this._id}}"><img class="img-fluid"  src="picture/book/{{this._id}}.jpg" ></a>
                        <div class="block text-center">
                            <a class="text-white ">{{this.title}}</a>
                            {{#if this.notStock}}
                                <a class="text-white "> (немає в наявності)</a>
                            {{/if}}
                        </div>
                      </div>
                    {{/each}}
              </div>             
        </form>
</section>