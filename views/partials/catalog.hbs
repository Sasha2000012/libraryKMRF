
<section id="main">
    
    <form action="find">
        <div class="row justify-content-center">
            <a href="/catalog-title-up">Название(возрастание)</a>
            <a href="/catalog-title-down">Название(убывание)</a>
            <form action="find" method="GET">
                <div class="input-group col-3">
                    <input type="text" class="form-control" name="text" id="keyText" value="">
                    <div class="input-group-append">
                    <button type="submit" class="btn btn-primary" id="">Найти</button> 
                </div>
          </div>
            </form>
        </div>
        <div class="row justify-content-center">
            
        </div>
        <div class=" row justify-content-center main-row-padding main-row-padding-leftrightt">
            {{#each books}}
                <div class="col-lg-3 col-md-6 col-sm-12 marginntop holder">
                        <a href="/book/{{this._id}}"><img class="img-fluid"  src="picture/book/{{this._id}}.jpg" ></a>
                        <div class="block text-center">
                            <a class="text-white ">{{this.title}}</a>
                            {{#if this.notStock}}
                                <a class="text-white "> (немає в наявності)</a>
                            {{/if}}
                        </div>
                    </div>
            {{/each}}
        </div>
    </form>
</section>